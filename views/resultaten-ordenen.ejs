<%- include("partials/head.ejs", {title: "Resultaten van het ordenen"}) %>
<%- include("partials/header-complex.ejs") %>
    
    <main class="container"><!--De afbeeldingen komen van de API-->
        <hgroup class="container-fluid col-lg-10">
        <h1>Resultaten</h1>
        <p>In deze pagina word de aantal van de gebruikte minifigs en geskipte minifigs bijgehouden met daarbij een knopje waardoor het ook in een lijst wordt getoond</p>
        </hgroup>
        <section class="row justify-content-evenly">
            <article class="card text-bg-success col-9 col-sm-7 col-lg-4">
                <div class="card-header">
                    <h2 class="card-title">Aantal gebruikt</h2>
                </div>
                <form class="card-body" action="/resultaten-ordenen/gebruikte-minifigs" method="post" target="_blank">
                    <p class="card-text" id="number-sorted"><%= usedMinifigs.length %></p>
                    <input type="hidden" name="usedMinifigs" value="<%= JSON.stringify(usedMinifigs) %>" />
                    <button type="submit" class="btn btn-dark d-block"><i class="bi bi-eye-fill">&ensp;</i>Lijst bekijken</button>
                </form>
            </article>
            <article class="card text-bg-warning col-9 col-sm-7 col-lg-4 mt-5 mt-lg-0">
                <div class="card-header">
                    <h2 class="card-title">Aantal overgeslagen</h2>
                </div>
                <form class="card-body" action="/resultaten-ordenen/overgeslagen-minifigs" method="post" target="_blank">
                    <p class="card-text" id="number-skipped"><%= skippedMinifigs.length %></p>
                    <input type="hidden" name="skippedMinifigs" value="<%= JSON.stringify(skippedMinifigs) %>" />
                    <button type="submit" class="btn btn-dark d-block"><i class="bi bi-eye-fill">&ensp;</i>Lijst bekijken</button>
                </form>
            </article>
        </section>
    </main>
    
<%- include("partials/footer") %>