<%- include('partials/head.ejs', {title: "Lego Masters"}) %>
<%- include("partials/header-complex.ejs") %>

    <main class="container">
        
        <h1>Welkom bij Lego Masters</h1>
        

        <section class="row gap-5 gap-lg-0">
            <article class="col-lg-4 col-md-12">
                <a href="/niet-geordende-minifigs" class="no-link-style">
                    <figure class="card rounded-4">
                        <img src="/assets/images/niet-geordende-minifigs.png" class="card-img-top rounded-4" alt="niet-geordende-minifigs_image" /><!--Afbeelding komt van pixabay-->
                        <div class="card-body">
                            <figcaption class="card-text d-block btn btn-danger rounded-3"><i class="bi bi-archive-fill">&ensp;</i>Niet-geordende minifigs</figcaption>
                        </div>
                    </figure>
                </a>
            </article>
            

            <article class="col-lg-4 col-md-12">
                <a href="/blacklist" class="no-link-style">
                    <figure class="card rounded-4">
                        <img src="/assets/images/blacklist.png" class="card-img-top rounded-4" alt="blacklist_image" /><!--Afbeelding komt van Pinterest-->
                        <div class="card-body">
                            <figcaption class="card-text d-block btn btn-dark rounded-3"><i class="bi bi-x-circle-fill">&ensp;</i>Blacklist</figcaption>
                        </div>
                    </figure>
                </a>
            </article>

            <article class="col-lg-4 col-md-12">
                <a href="/geordende-minifigs" class="no-link-style">
                    <figure class="card rounded-4">
                        <img src="/assets/images/geordende-minifigs.png" class="card-img-top rounded-4" alt="geordende-minifigs_image" /><!--Afbeelding komt van pixabay-->
                        <div class="card-body">
                            <figcaption class="card-text d-block btn btn-success rounded-3"><i class="bi bi-check-circle-fill">&ensp;</i>Geordende minifigs</figcaption>
                        </div>
                    </figure>
                </a>
            </article>
            

        </section>

        <section class="row">
            <article class="text-center col-xl-8 col-lg-12 p-4 p-lg-5 mx-auto mt-5 border rounded-4">
                <h4>Te ordenen minifigs</h4>
                <hr class="my-4 my-lg-5 w-75 mx-auto" />
                <p>Er zijn nog <b><%=minifigToOrder.length%></b> minifigs zonder verblijf.</p>
                
                <% if (minifigToOrder.length == 0) { %>

                   <form action="/addNewMinifigToDatabase" method="post">
                    <label for="minifigs">Hoeveel minifigs wil je weer ordenen?</label>
                    <input type="number" class="form-control" id="minifigs" name="minifigs" min="1" max="5" placeholder="Aantal minifigs" required/>
                    <button type="submit" class="btn orange mt-3 w-50 rounded-3">Help ze een handje</button>
                   </form> <!--<a href="minifigs-ordenen.html" class="btn orange mt-3 w-50 rounded-3">Help ze een handje!</a></form>-->
                   <!--als databse leeg is nieuwe minifigs uit database ophalen met beperkte aantal aan gebruiker vragen hoeveel minifigs ophalen van database -->
                   
                <% } else { %>

                    <a href="/minifigs-ordenen" class="btn orange mt-3 w-50 rounded-3">Help ze een handje</a>
                    <!--als database niet leeg is dan gewoon de tekst van te ordenen minifigs laten zien
                    hierna komt de gebruiker in te ordenen minifigs pagina
                na het einde van ordenen wordt gebruiker automatisch naar resultaten pagina gestuurt-->
                <% } %>
            </article>
        </section>
        
    </main>
    
<% include('partials/footer.ejs') %>